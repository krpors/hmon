<?xml version="1.0" encoding="UTF-8"?>
<hmonconfig name="Common tests">
    <monitor name="Github.com">
		<url>https://status.github.com</url>
		<timeout>30000</timeout>
		<assertions>
			<assertion>GitHub System Status</assertion>
		</assertions>
	</monitor>
    <monitor name="Google home check">
        <url>http://google.com</url>
        <timeout>30000</timeout>
        <assertions>
            <assertion>^&lt;!doctype html</assertion>
        </assertions>
    </monitor>
    <monitor name="IANA home check">
        <url>http://www.iana.org</url>
        <timeout>30000</timeout>
        <assertions>
            <assertion>Ixternet Assigned Numbers Authority</assertion>
        </assertions>
    </monitor>
    <monitor name="Localhost Netcat">
        <url>http://localhost:1222</url>
        <timeout>0</timeout>
        <assertions>
            <assertion>NIL</assertion>
        </assertions>
    </monitor>
</hmonconfig>
