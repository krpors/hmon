<?xml version="1.0" encoding="UTF-8"?>
<hmon>
    <http>
        <url>http://www.iana.org/domains/example/</url>
        <!-- optional, default is 30 secs? -->
        <timeout>60</timeout>
        <!-- optional extra headers to send -->
        <headers>
            <header name="SOAPAction" value="whatevs"/>
        </headers>
        <assertions>
            <!-- regexes -->
            <assert>Example Domains</assert>
        </assertions>
    </http>
</hmon>
